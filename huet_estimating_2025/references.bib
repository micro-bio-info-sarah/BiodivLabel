	file = {Coinon_2022_Essais sur les externalités spatiales associées à l'agriculture biologique.pdf:C\:\\Users\\srhuet\\OneDrive\\Zotero\\Coinon_2022_Essais sur les externalités spatiales associées à l'agriculture biologique.pdf:application/pdf},
