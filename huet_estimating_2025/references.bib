	year = {2018},
	note = {Publisher: Frontiers},
	keywords = {adjuvants, Cocktail effect, Endocrine Disruptors, pesticide, Pesticides, Risk Assessment, surfactants, Toxicity Tests},
	file = {Mesnage_Antoniou_2018_Ignoring Adjuvant Toxicity Falsifies the Safety Profile of Commercial Pesticides.pdf:C\:\\Users\\srhuet\\OneDrive\\Zotero\\Mesnage_Antoniou_2018_Ignoring Adjuvant Toxicity Falsifies the Safety Profile of Commercial Pesticides.pdf:application/pdf},
