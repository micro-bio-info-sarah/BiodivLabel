	keywords = {fertilization, grazing, landscape complexity, meta-analyses, plant diversification, plantprotection products, systematic review, tillage},
	file = {Babin et al_2023_Effects of agricultural practices on biodiversity.pdf:C\:\\Users\\srhuet\\OneDrive\\Zotero\\Babin et al_2023_Effects of agricultural practices on biodiversity.pdf:application/pdf},
