	institution = {INRAE-PSAE},
	author = {Jayet, Pierre-Alain and Petsakos, Athanasios and Chakir, Raja and Lungarska, Anna and Cara, Stéphane De and Petel, Elvire and Humblot, Pierre and Godard, Caroline and Leclère, David and Cantelaube, Pierre and Bourgeois, Cyril and Clodic, Mélissa and Bamière, Laure and Fradj, Nosra Ben and Aghajanzadeh-Darzi, Parisa and Dumollard, Gaspard and Isbasoiu, Ancuta and Adrian, Juliette and Pilchak, Gregory and Bounaffaa, Myriam and Barberis, Delphine and Assaiante, Coline and Ollier, Maxime and Henry, Loïc and Florio, Alessandro and Chiadmi, Ines and Gossiaux, Eva and Ramirez, Erica and Gérard, Maxence and Reineix, Julie and Zuravel, Olga and Baldi, Lisa and Weng, Mingzhu},
