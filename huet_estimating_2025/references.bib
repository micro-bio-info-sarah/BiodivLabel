	author = {Cedergreen, Nina},
	month = may,
	year = {2014},
	note = {Publisher: Public Library of Science},
	keywords = {Azoles, Cocktail effect, Fungicides, Herbicides, Organophosphates, pesticide, Pesticides, Synergy testing, Toxicity, Xenobiotic metabolism},
	pages = {e96580},
